{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true  // <-- Add this line
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
